# Ubuntu specific
alias a="sudo apt-get "
alias ad="sudo apt-get -y update "
alias ag="sudo apt-get -y upgrade "
alias ai="sudo apt-get -y install "
alias ar="sudo apt-get -y remove "

alias c="clear"

# Some handy goto directories
alias d="cd ~/dotfiles"
alias dv="cd ~/dotfiles && vim"

alias e="exit"

# Git
alias g='git '
alias ga='git add '
alias gaa='git add -A'
alias gb='git branch '
alias gc='git commit -m '
alias gca='git commit --amend'
alias gcc='git commit'
alias gch='git checkout '
alias gcl='git clone '
alias gcn='git clean '
alias gco='git commit --ours '
alias gcp='git cherry-pick '
alias gct='git commit --theirs '
alias gd='git diff --word-diff --histogram'
alias gdc='git diff --cached'
alias gds='git diff --staged'
alias gl="git log --pretty='%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(cyan)[%an]%Creset' --graph"
alias glf='gl --follow '
alias gls='gl --stat -G'
alias gm='git merge '
alias gpl='git pull '
alias gplo='git pull origin '
alias gps='git push '
alias gpso='git push origin '
alias gs='git status '
alias gsh='git show '
alias gst='git stash'

# Serve current folder
alias p="python -m SimpleHTTPServer "
alias pp="python -m SimpleHTTPServer"

# Tmux
alias t='tmux -2u'

# Vim
alias v='vim'
